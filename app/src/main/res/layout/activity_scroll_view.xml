<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ScrollViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/scroll_view_horizontal_categories"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvHorizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/viewH1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH2"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH3"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH2"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH3"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH5"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH4"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH6"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH5"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH7"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH6"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHorizontal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/scroll_view_vertical_items"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHorizontal2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/viewN1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewN2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewN1" />

                <View
                    android:id="@+id/viewN3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewN2" />

                <View
                    android:id="@+id/viewN4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewN3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHorizontal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/scroll_view_horizontal_categories"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvHorizontal1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/viewH11"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH12"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH11"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH13"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH12"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH14"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH13"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH15"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH14"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH16"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_background"
                    app:layout_constraintStart_toEndOf="@+id/viewH15"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/viewH17"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/viewH16"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>